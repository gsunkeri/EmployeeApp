<div data-role="page" data-url="<%= Rho::RhoConfig.start_path %>/">

  <div data-role="header" data-position="inline">
    <h1>EmployeeApp</h1>
    <% if SyncEngine::logged_in > 0 %>
    <a href="<%= url_for :controller => :Settings, :action => :do_sync %>" class="ui-btn-left" data-icon="refresh">
      Sync
    </a>
    <a href="<%= url_for :controller => :Settings, :action => :logout %>" class="ui-btn-right" data-icon="star">
	    Logout
	  </a>
    <% else %>
        <a href="<%= url_for :controller => :Settings, :action => :login %>" class="ui-btn-right" data-icon="star">Login</a>
    <% end %>
  </div>

  <div data-role="content">
    <ul data-role="listview">
      <a href="<%= url_for :controller => :Employee %>">Employee</a>
            <li>
              <a href="<%= url_for :controller => :Employee, 
              :action => :index
              %>">
                <span class="title">Employee</span>
                <span class="disclosure_indicator"></span>
              </a>
            </li>
      <a href="<%= url_for :controller => :Employee %>">Employees with designation</a>
      <li>
        <a href="<%= url_for :controller => :Employee, 
        :action => :employee_details
        %>">
          <span class="title">Employee Details</span>
          <span class="disclosure_indicator"></span>
        </a>
      </li>
      <a href="<%= url_for :controller => :Employee %>">Login</a>
      <a href="<%= url_for :controller => :Employee %>">Search Employee</a>
      <a href="<%= url_for :controller => :Employee %>">Delete all</a>
      <a href="<%= url_for :controller => :Employee %>">Footer</a>
      <a href="<%= url_for :controller => :Employee %>">Footer_new</a>
    </ul>
  </div>
</div>
