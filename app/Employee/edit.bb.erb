<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @employee.object %>
    <h1>Edit <%= @employee.Name%></h1>
    <%= link_to "Delete", :action => :delete, :id => @employee.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @employee.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Name: </td>
              <td class="itemValue"><input type="text" name="employee[Name]" value="<%= @employee.Name %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Company D : </td>
              <td class="itemValue"><input type="text" name="employee[Company]" value="<%= @employee.Company %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Address: </td>
              <td class="itemValue"><input type="text" name="employee[Address]" value="<%= @employee.Address %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Age_1 : </td>
              <td class="itemValue"><input type="text" name="employee[Age]" value="<%= @employee.Age %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Gender: </td>
              <td class="itemValue"><input type="text" name="employee[Gender]" value="<%= @employee.Gender %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
